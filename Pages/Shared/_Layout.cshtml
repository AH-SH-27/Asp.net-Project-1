<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ENERGY</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TWebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <header class="position-sticky top-0 bg-light @ViewBag.HeaderTransparent">
        <nav class=" navbar-expand-sm navbar-toggleable-sm box-shadow p-2 ">
            <div class="container d-flex justify-content-between align-items-center">
                <a class="navbar-brand fw-bold fs-3 text-dark" asp-area="" asp-page="/Index">ENERGY</a>
                <button class="navbar-toggler bg-black" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end pe-4 me-4">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark @ViewBag.LightLinks" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @ViewBag.LightLinks" asp-area="" asp-page="/Products">Products</a>
                        </li>
                        <li class="nav-item">
                            <div class="containerToggleTest">
                                <input id="themeSwitch" type="checkbox" class="toggleTest" />
                                <span class="spanTest"></span>
                                <i class="bi bi-brightness-high-fill sunToggle"></i>
                                <i class="bi bi-moon-stars-fill moonToggle"></i>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top py-2 text-muted bg-light">
            <div class="container d-flex gap-5 align-items-baseline">
                <h1>ENERGY</h1>
                <div class="d-flex gap-5 py-2 my-3 justify-content-center align-items-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
            <p class="d-flex justify-content-center">&copy; 2024 - OUR ENERGY WEBSITE - <a asp-area="" asp-page="/Privacy">ENERGY</a></p>
    </footer>

    <script>

        document.addEventListener("DOMContentLoaded", function () {
            var header = document.querySelector("header");
            var navbarLinks = document.querySelectorAll(".light-links");

            window.addEventListener("scroll", function () {
                var scrollPosition = window.scrollY;
                if (scrollPosition > 614) {
                    header.classList.remove("transparent-header");
                    navbarLinks.forEach(link => {
                        link.classList.remove("light-links");
                        link.classList.add("text-dark");
                    });
                } else {
                    header.classList.add("transparent-header");
                    navbarLinks.forEach(link => {
                        link.classList.add("light-links");
                        link.classList.remove("text-dark");
                    });
                }
            });
        });


        document.getElementById('themeSwitch').addEventListener('change', () => {
            const currentTheme = document.documentElement.getAttribute('data-theme');
            const isDarkTheme = currentTheme === 'dark';

            document.documentElement.setAttribute('data-theme', isDarkTheme ? 'light' : 'dark');
        });




        </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>