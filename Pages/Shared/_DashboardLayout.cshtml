<!DOCTYPE html>

<html lang="en" data-theme="light">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ENERGY</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/TWebApplication1.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body class="d-flex">
	<header class="bd-sidebar bg-light p-3 d-flex flex-column flex-shrink-0 p-3">
		<div>
			<h1 class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">Dashboard</h1>
		</div>
		<hr />
		<nav>
			<ul class="nav nav-pills flex-column mb-auto">
				<li class="nav-item">
					<a asp-page="/Dashboard/Dashboard" class="nav-link">Home</a>
				</li>
				<li class="">
					<a asp-page="/Dashboard/Products" class="nav-link">Products</a>
				</li>
				<li class="">
					<a class="nav-link">Products</a>
				</li>
			</ul>
		</nav>
	</header>

	<div>
		<main role="main">
			@RenderBody()
		</main>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
